@import './mixin.styl';
body
  -webkit-font-smoothing: antialiased

textarea
  resize: none

.radio-inline,
.checkbox-inline
  cursor: default

.navbar
  border-bottom: 0
  height: 50px
  line-height: 50px
  background-color: #565656
  border-radius: 0
  box-shadow: 0 0 1px rgba(0, 0, 0, .4)
  color: #fff
  a
    color: #fff
    text-decoration: none
  .u-logo-wrapper
    font-size: 20px
    img
      vertical-align: middle
      width: 44px
      height: 44px
  .u-user
    img
      margin-right: 5px
      vertical-align: middle
      width: 30px
      height: 30px
    span
      vertical-align: middle

.main
  padding: 30px 0

.u-panel-style
  border: 1px solid #E9E9E9
  box-shadow: 0 4px 8px rgba(0, 0, 0, .05)
  .panel-body
    padding: 25px

.u-create-project-form
  .control-label
    color: #777
    font-weight: normal

  .u-select-control
    padding-bottom: 10px
    &:last-child
      padding-bottom: 0
  .has-error
    .help-block
      display: block
  .help-block
    display: none
    white-space: nowrap
  .u-form-divider
    margin-top: 10px
  select.form-control
    min-width: 60px

  .radio
  .radio-inline
    label
      font-weight: normal
  .radio-inline
    & + .radio-inline
      margin-left: 30px
  .u-from-radio
    .radio-inline
      margin-left: 30px
      padding-top: 3px

    .u-radio-select
      margin: 0
      padding-right: 0
      padding-left: 10px

  @media (min-width: 768px)
    .u-select-control
      padding: 0 4px
      &:first-child
        padding-left: 15px
      &:last-child
        padding-right: 15px

