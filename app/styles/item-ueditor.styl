/* 项目编辑器 */
.u-panel-style
  border: 1px solid #E9E9E9
  box-shadow: 0 4px 8px rgba(0, 0, 0, .05)
  .panel-body
    padding: 25px

.item-ueditor-layer
  display: none
  position: absolute
  z-index: 100000
  top: 0
  left: 0
  width: 100%
  min-width: 640px;
  min-height: 100%
  padding-top: 54px
  box-sizing: border-box
  background: #f7f7f7
  .item-button-group
    box-sizing: border-box
    position: fixed
    top: 0
    left: 0
    width: 100%
    padding: 12px
    background: #f7f7f7
    .btn
      min-width: 74px
  .item-container
    padding: 8px 0 50px
    .item-list-wrapper
      padding: 50px 70px

.item-list-wrapper
  .item-list
    margin: 0
    padding: 0
    list-style: none;
    color: #000
    li
      padding-bottom: 20px
      &:last-child
        padding-bottom: 0
    .checkbox
      float: left
      display: block
      margin: 0
      margin-left: -24px
      margin-top: 2px
      width: 16px
      height: 16px
      background: url(../images/checkbox.png) 0 top / 100% auto no-repeat
      cursor: pointer
      [type=checkbox]
        display: none
      &.checked
        background-position: 0 bottom
    .item-content
      font-size: 12px
      line-height: 1.5
      color: #333
      text-align: justify
      p
        margin: 0

.item-ueditor
  border: 1px solid #E7E7EB
  padding: 8px 20px
  .item-ueditor-toolbar-wrapper
    padding-bottom: 10px
    border-bottom: 1px solid #E7E7EB
    .item-ueditor-toolbtn
      display: inline-block
      min-width: 22px
      box-sizing: border-box
      .dropdown-menu
        min-width: 60px
  .edui-default .edui-editor
    border: 0

.u-btn-group
  text-align: center
  font-size: 0
  .btn
    margin: 0 10px
    width: 84px
